{
    "name": "rock-off-host",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/rock-off/host/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/rock-off/host",
                "compiler": "babel",
                "main": "apps/rock-off/host/src/main.ts",
                "tsConfig": "apps/rock-off/host/tsconfig.app.json",
                "webpackConfig": "apps/rock-off/host/webpack.config.js",
                "assets": [
                    "apps/rock-off/host/src/favicon.ico",
                    "apps/rock-off/host/src/assets"
                ],
                "index": "apps/rock-off/host/src/index.html",
                "baseHref": "/",
                "styles": ["apps/rock-off/host/src/styles.css"],
                "scripts": []
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "extractLicenses": true,
                    "vendorChunk": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/rock-off/host/src/environments/environment.ts",
                            "with": "apps/rock-off/host/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@nx/webpack:dev-server",
            "options": {
                "buildTarget": "rock-off-host:build"
            },
            "configurations": {
                "production": {
                    "buildTarget": "rock-off-host:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/rock-off/host/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/rock-off/host/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    }
}
