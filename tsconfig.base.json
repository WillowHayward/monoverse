{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@whc/asset-loader": ["libs/asset-loader/src/index.ts"],
            "@whc/character": ["libs/character/src/index.ts"],
            "@whc/deck": ["libs/deck/src/index.ts"],
            "@whc/event-manager": ["libs/event-manager/src/index.ts"],
            "@whc/fps": ["libs/fps/src/index.ts"],
            "@whc/lipwig/js": ["libs/lipwig/js/src/index.ts"],
            "@whc/lipwig/types": ["libs/lipwig/types/src/index.ts"],
            "@whc/lipwig/ui": ["libs/lipwig/ui/src/index.ts"],
            "@whc/skeleton": ["libs/skeleton/src/index.ts"],
            "@whc/ui/lib": ["libs/ui/lib/src/index.ts"],
            "@whc/utils": ["libs/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
